{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      ".next"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "watch": [
      "server/**/*",
      "server.js",  
      "test/fixtures/",
      "test/samples/"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js json"
  }